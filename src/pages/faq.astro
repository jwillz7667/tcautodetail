---
import Layout from '../layouts/Layout.astro';
import Header from '../components/header/Header.astro';
import Footer from '../components/footer/Footer.astro';

const faqs = [
  {
    question: "What is FanFuelHQ?",
    answer: "FanFuelHQ is your premier destination for sports news, analysis, and community engagement. We provide comprehensive coverage across all major sports, featuring expert analysis, live scores, and a vibrant community of sports fans."
  },
  {
    question: "How do I create an account?",
    answer: "Creating an account is simple! Click the 'Sign Up' button in the top right corner, enter your email address and create a password. You can also sign up using your social media accounts for quicker access."
  },
  {
    question: "What comes with a Premium membership?",
    answer: "Premium members get access to exclusive content, ad-free browsing, expert analysis, premium community features, and early access to new features. Visit our Premium page for a full comparison of features."
  },
  {
    question: "How can I contact support?",
    answer: "You can reach our support team through our Contact page, where you can submit a ticket. Premium members also get access to priority support via live chat."
  }
];
---

<Layout title="FAQ">
  <Header />
  <main class="min-h-screen bg-gradient-to-br from-gray-850 to-secondary pt-24">
    <div class="container mx-auto px-6 py-12">
      <div class="max-w-3xl mx-auto">
        <h1 class="text-4xl font-bold text-white mb-12">Frequently Asked Questions</h1>
        <div class="space-y-6">
          {faqs.map(faq => (
            <div class="bg-white/10 backdrop-blur-lg rounded-xl border border-white/20 p-6">
              <h3 class="text-xl font-bold text-white mb-3">{faq.question}</h3>
              <p class="text-gray-300">{faq.answer}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>
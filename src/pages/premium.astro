---
import Layout from '../layouts/Layout.astro';
import Header from '../components/header/Header.astro';
import Footer from '../components/footer/Footer.astro';

const plans = [
  {
    name: "Basic",
    price: "Free",
    features: [
      "Live Scores",
      "Basic News Access",
      "Limited Articles",
      "Community Access"
    ]
  },
  {
    name: "Premium",
    price: "$9.99/mo",
    features: [
      "All Basic Features",
      "Exclusive Content",
      "Ad-Free Experience",
      "Expert Analysis",
      "Premium Community Features"
    ],
    highlighted: true
  }
];
---

<Layout title="Premium">
  <Header />
  <main class="min-h-screen bg-gradient-to-br from-gray-850 to-secondary pt-24">
    <div class="container mx-auto px-6 py-12">
      <h1 class="text-4xl font-bold text-white text-center mb-12">Premium Membership</h1>
      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        {plans.map(plan => (
          <div class:list={[
            "p-6 rounded-xl backdrop-blur-lg border",
            plan.highlighted 
              ? "bg-primary/20 border-primary" 
              : "bg-white/10 border-white/20"
          ]}>
            <h3 class="text-2xl font-bold text-white mb-2">{plan.name}</h3>
            <p class="text-3xl font-bold text-white mb-6">{plan.price}</p>
            <ul class="space-y-3">
              {plan.features.map(feature => (
                <li class="flex items-center text-gray-300">
                  <svg class="w-5 h-5 mr-2 text-primary" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
            <button class:list={[
              "w-full mt-6 px-6 py-3 rounded-lg font-medium transition-transform hover:scale-105",
              plan.highlighted
                ? "bg-primary text-white"
                : "bg-white/10 text-white hover:bg-white/20"
            ]}>
              Get Started
            </button>
          </div>
        ))}
      </div>
    </div>
  </main>
  <Footer />
</Layout>
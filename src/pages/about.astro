---
import Layout from '../layouts/Layout.astro';
import Header from '../components/header/Header.astro';
import Footer from '../components/footer/Footer.astro';

const team = [
  {
    name: "Sarah Chen",
    role: "Editor in Chief",
    image: "https://i.pravatar.cc/150?u=sarah"
  },
  {
    name: "Alex Thompson",
    role: "Lead Sports Analyst",
    image: "https://i.pravatar.cc/150?u=alex"
  },
  {
    name: "Mike Rodriguez",
    role: "E-Sports Director",
    image: "https://i.pravatar.cc/150?u=mike"
  }
];
---

<Layout title="About Us">
  <Header />
  <main class="min-h-screen bg-gradient-to-br from-gray-850 to-secondary pt-24">
    <div class="container mx-auto px-6 py-12">
      <div class="max-w-3xl mx-auto">
        <h1 class="text-4xl font-bold text-white mb-8">About FanFuelHQ</h1>
        <div class="prose prose-invert mb-12">
          <p>
            Founded in 2024, FanFuelHQ is your premier destination for sports news, analysis, and community engagement. Our mission is to bring fans closer to the sports they love through comprehensive coverage and innovative features.
          </p>
          <h2>Our Mission</h2>
          <p>
            We strive to provide the most comprehensive, accurate, and engaging sports coverage while building a vibrant community of passionate fans.
          </p>
          <h2>Our Values</h2>
          <ul>
            <li>Accuracy in reporting</li>
            <li>Community engagement</li>
            <li>Innovation in sports media</li>
            <li>Inclusivity and diversity</li>
          </ul>
        </div>

        <h2 class="text-2xl font-bold text-white mb-6">Our Team</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {team.map(member => (
            <div class="text-center">
              <img 
                src={member.image} 
                alt={member.name}
                class="w-32 h-32 rounded-full mx-auto mb-4"
              />
              <h3 class="text-xl font-bold text-white">{member.name}</h3>
              <p class="text-gray-300">{member.role}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>
---
import Layout from '../layouts/Layout.astro';
import Header from '../components/header/Header.astro';
import Footer from '../components/footer/Footer.astro';
---

<Layout title="Contact Us">
  <Header />
  <main class="min-h-screen bg-gradient-to-br from-gray-850 to-secondary pt-24">
    <div class="container mx-auto px-6 py-12">
      <div class="max-w-2xl mx-auto">
        <h1 class="text-4xl font-bold text-white mb-8">Contact Us</h1>
        <div class="bg-white/10 backdrop-blur-lg rounded-xl border border-white/20 p-8">
          <form class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-white mb-2">Name</label>
              <input
                type="text"
                id="name"
                required
                class="w-full px-4 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-white mb-2">Email</label>
              <input
                type="email"
                id="email"
                required
                class="w-full px-4 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary"
              />
            </div>
            <div>
              <label for="subject" class="block text-sm font-medium text-white mb-2">Subject</label>
              <select
                id="subject"
                required
                class="w-full px-4 py-2 bg-white/10 border border-white/20 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary"
              >
                <option value="">Select a subject</option>
                <option value="general">General Inquiry</option>
                <option value="support">Technical Support</option>
                <option value="feedback">Feedback</option>
                <option value="business">Business Proposal</option>
              </select>
            </div>
            <div>
              <label for="message" class="block text-sm font-medium text-white mb-2">Message</label>
              <textarea
                id="message"
                rows="6"
                required
                class="w-full px-4 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary"
              ></textarea>
            </div>
            <button
              type="submit"
              class="w-full px-6 py-3 bg-primary text-white font-medium rounded-lg transition-transform hover:scale-105"
            >
              Send Message
            </button>
          </form>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  const form = document.querySelector('form');
  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    // Add form submission logic here
    alert('Thank you for your message! We will get back to you soon.');
    form.reset();
  });
</script>
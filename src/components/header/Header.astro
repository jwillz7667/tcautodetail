---
import NavLink from './NavLink.astro';
import MobileMenu from './MobileMenu.astro';
---

<header class="fixed top-0 left-0 right-0 z-50">
  <div class="bg-gray-850/90 backdrop-blur-lg border-b border-white/10">
    <div class="container mx-auto px-6">
      <div class="flex items-center justify-between h-28">
        <!-- Logo -->
        <a href="/" class="flex items-center py-2">
          <img 
            src="/logo.svg" 
            alt="FanFuelHQ Logo" 
            class="h-24 w-auto transform hover:scale-105 transition-transform duration-200"
          />
        </a>

        <!-- Desktop Navigation -->
        <nav class="hidden lg:flex items-center space-x-8">
          <NavLink href="/" active>Home</NavLink>
          <NavLink href="/news">News</NavLink>
          <NavLink href="/analysis">Analysis</NavLink>
          <NavLink href="/scores">Scores</NavLink>
          <NavLink href="/teams">Teams</NavLink>
        </nav>

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-btn"
          class="lg:hidden p-2 rounded-lg text-gray-300 hover:text-white focus:outline-none"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            ></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <MobileMenu isOpen={false} data-mobile-menu />
</header>
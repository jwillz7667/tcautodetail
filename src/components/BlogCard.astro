---
interface Props {
  title: string;
  excerpt: string;
  image: string;
  category: string;
  author: {
    name: string;
    avatar: string;
  };
  date: string;
  slug: string;
}

const { title, excerpt, image, category, author, date, slug } = Astro.props;
---

<article class="group rounded-xl overflow-hidden backdrop-blur-lg bg-black/50 border border-white/10 shadow-xl transition-transform duration-300 hover:-translate-y-1">
  <a href={`/blog/${slug}`} class="block">
    <div class="relative h-48 overflow-hidden">
      <img src={image} alt={title} class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" />
      <span class="absolute top-4 left-4 px-3 py-1 bg-primary text-white rounded-full text-sm">
        {category}
      </span>
    </div>
    <div class="p-6">
      <h3 class="text-xl font-bold mb-3 text-white group-hover:text-primary transition-colors">
        {title}
      </h3>
      <p class="text-gray-300 mb-4 line-clamp-2">
        {excerpt}
      </p>
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <img src={author.avatar} alt={author.name} class="w-8 h-8 rounded-full" />
          <span class="text-sm text-gray-300">{author.name}</span>
        </div>
        <span class="text-sm text-gray-400">{date}</span>
      </div>
    </div>
  </a>
</article>